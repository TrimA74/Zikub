<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sthioul.olivier.zikub.MainActivity">

    <LinearLayout
        android:layout_width="434dp"
        android:layout_height="545dp"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_weight="0.52"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.538"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0">

        <FrameLayout
            android:id="@+id/image5"
            android:layout_width="match_parent"
            android:layout_height="352dp"
            android:layout_gravity="top"
            android:layout_marginBottom="8dp"
            android:foregroundGravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="8dp">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="184dp"
                android:layout_height="172dp"
                android:layout_margin="0dp"
                android:background="@android:color/transparent"
                android:visibility="visible"
                app:srcCompat="@android:color/holo_blue_bright" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="184dp"
                android:layout_height="172dp"
                android:layout_marginLeft="184dp"
                android:background="@android:color/transparent"
                app:srcCompat="@android:color/holo_green_dark" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="184dp"
                android:layout_height="172dp"
                android:layout_marginTop="172dp"
                android:background="@android:color/transparent"
                app:srcCompat="@android:color/holo_orange_light" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="184dp"
                android:layout_height="172dp"
                android:layout_marginLeft="184dp"
                android:layout_marginTop="172dp"
                android:background="@android:color/transparent"
                app:srcCompat="@android:color/holo_orange_dark" />

            <ImageButton
                android:id="@+id/currentImageMusic"
                android:layout_width="184dp"
                android:layout_height="172dp"
                android:layout_marginLeft="92dp"
                android:layout_marginTop="80dp"
                android:background="@android:color/transparent"
                android:visibility="visible"
                app:srcCompat="@android:color/holo_red_dark"
                tools:layout_editor_absoluteX="213dp"
                tools:layout_editor_absoluteY="187dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image5"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:background="@android:color/transparent"
                app:srcCompat="@android:drawable/ic_media_previous" />

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_weight="0.01"
                app:srcCompat="@android:drawable/ic_media_rew" />

            <ImageButton
                android:id="@+id/playButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:srcCompat="@android:drawable/ic_media_play" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:background="@android:color/transparent"
                app:srcCompat="@android:drawable/ic_media_ff" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                app:srcCompat="@android:drawable/ic_media_next" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="387dp"
        android:layout_height="47dp"
        android:layout_marginBottom="-3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">

        <fragment
            android:id="@+id/fooFragment"
            android:name="sthioul.olivier.zikub.MenuFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.52"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="24dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
